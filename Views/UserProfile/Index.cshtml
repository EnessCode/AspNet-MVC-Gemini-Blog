@model BlogProject.ViewModels.UserProfileViewModel
@{
    ViewBag.Title = "Profilim";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">

<style>
    .profile-wrapper {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        padding: 40px 0;
        min-height: 100vh;
    }

        .profile-wrapper a {
            text-decoration: none !important;
            cursor: pointer;
        }

    .profile-card {
        border-radius: 15px;
        border: none;
    }

    .nav-tabs .nav-link {
        border: none;
        color: #6c757d;
        font-weight: 600;
    }

        .nav-tabs .nav-link.active {
            color: #0d6efd;
            border-bottom: 3px solid #0d6efd;
            background: transparent;
        }

    .profile-wrapper ul, .profile-wrapper li {
        list-style: none;
        margin: 0;
        padding: 0;
    }
</style>

<div class="profile-wrapper">
    <div class="container">

        <div class="d-flex align-items-center mb-4">
            <a href="/Default/Index" class="btn btn-outline-secondary me-3"><i class="fas fa-arrow-left"></i> Ana Sayfa</a>
            <h2 class="mb-0 fw-bold text-dark">Profilim</h2>
        </div>

        <div class="row">
            <div class="col-lg-4 mb-4">
                <div class="card profile-card shadow-sm text-center p-4 bg-white">
                    <div class="mb-3 d-flex justify-content-center">
                        <img src="https://ui-avatars.com/api/?name=@Model.User.Username&size=128&background=0D8ABC&color=fff&bold=true"
                             class="rounded-circle shadow-sm" alt="Profil">
                    </div>
                    <h4 class="fw-bold text-dark">@Model.User.Username</h4>
                    <p class="text-muted small">@Model.User.Email</p>

                    <div class="d-flex justify-content-center gap-3 mt-3">
                        <div class="bg-light p-2 rounded px-3">
                            <h5 class="mb-0 fw-bold text-primary">@Model.MyComments.Count</h5>
                            <small class="text-muted" style="font-size: 12px;">Yorum</small>
                        </div>
                        <div class="bg-light p-2 rounded px-3">
                            <h5 class="mb-0 fw-bold text-danger">@Model.LikedPosts.Count</h5>
                            <small class="text-muted" style="font-size: 12px;">Beğeni</small>
                        </div>
                        <div class="bg-light p-2 rounded px-3">
                            <h5 class="mb-0 fw-bold text-warning">@Model.SavedPosts.Count</h5>
                            <small class="text-muted" style="font-size: 12px;">Kayıt</small>
                        </div>
                    </div>

                    @if (Session["Role"]?.ToString() == "User")
                    {
                        <div class="mt-4 border-top pt-3">
                            @if (ViewBag.HasPendingRequest == true)
                            {
                                <button class="btn btn-warning w-100" disabled>
                                    <i class="fas fa-clock me-2"></i> Başvurunuz İnceleniyor
                                </button>
                                <small class="text-muted mt-2 d-block" style="font-size: 0.8rem;">
                                    Başvurunuz yönetici onayından sonra sonuçlanacaktır.
                                </small>
                            }
                            else
                            {
                                <button id="btnApplyAuthor" class="btn btn-outline-primary w-100">
                                    <i class="fas fa-feather-alt me-2"></i> Yazar Olmak İstiyorum
                                </button>
                                <small class="text-muted mt-2 d-block" style="font-size: 0.8rem;">
                                    Kendi yazılarınızı paylaşmak için başvuru yapabilirsiniz.
                                </small>
                            }
                        </div>
                    }

                </div>
            </div>

            <div class="col-lg-8">
                <div class="card profile-card shadow-sm bg-white" style="min-height: 400px;">

                    <div class="card-header bg-white border-bottom pt-3 px-4">
                        <ul class="nav nav-tabs card-header-tabs" id="profileTabs" role="tablist">
                            <li class="nav-item">
                                <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#comments">
                                    <i class="fas fa-comments me-2"></i>Yorumlarım
                                </button>
                            </li>
                            <li class="nav-item">
                                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#likes">
                                    <i class="fas fa-heart me-2"></i>Beğendiklerim
                                </button>
                            </li>
                            <li class="nav-item">
                                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#saved">
                                    <i class="fas fa-bookmark me-2"></i>Kaydettiklerim
                                </button>
                            </li>
                        </ul>
                    </div>

                    <div class="card-body p-0">
                        <div class="tab-content">
                            <div class="tab-pane fade show active" id="comments">
                                @if (Model.MyComments.Count == 0)
                                {
                                    <div class="text-center py-5 text-muted">
                                        <i class="far fa-comment-dots fa-3x mb-3 opacity-25"></i>
                                        <p>Henüz hiç yorum yapmadınız.</p>
                                    </div>
                                }
                                else
                                {
                                    <div class="list-group list-group-flush">
                                        @foreach (var c in Model.MyComments)
                                        {
                                            <div class="list-group-item p-4 border-bottom">
                                                <div class="d-flex justify-content-between">
                                                    <div>
                                                        <h6 class="mb-1">
                                                            <a href="/Post/Detail/@c.PostId" class="text-primary fw-bold">@c.Post.Title</a>
                                                            <span class="text-muted fw-normal ms-1">yazısına:</span>
                                                        </h6>
                                                        <p class="mb-2 text-dark fst-italic">"@c.Text"</p>
                                                        <small class="text-muted"><i class="far fa-clock me-1"></i> @c.CreatedAt.ToShortDateString()</small>
                                                    </div>
                                                    <div>
                                                        <a href="javascript:void(0);"
                                                           onclick="confirmAction('/UserProfile/DeleteComment/@c.Id', 'Yorumu Sil?', 'Bu yorum kalıcı olarak silinecektir!')"
                                                           class="btn btn-outline-danger btn-sm rounded-circle" title="Sil">
                                                            <i class="fas fa-trash-alt"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>

                            <div class="tab-pane fade" id="likes">
                                <div class="p-4">
                                    @if (Model.LikedPosts.Count == 0)
                                    {
                                        <div class="text-center py-5 text-muted">
                                            <i class="far fa-heart fa-3x mb-3 opacity-25"></i>
                                            <p>Beğendiğiniz yazı yok.</p>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="row g-3">
                                            @foreach (var p in Model.LikedPosts)
                                            {
                                                <div class="col-md-6">
                                                    <div class="border rounded p-3 bg-light position-relative">
                                                        <h6 class="text-truncate fw-bold mb-2">@p.Title</h6>
                                                        <a href="/Post/Detail/@p.Id" class="btn btn-sm btn-primary w-100">Oku</a>
                                                        <a href="javascript:void(0);"
                                                           onclick="confirmAction('/UserProfile/RemoveLike?postId=@p.Id', 'Beğeniyi Kaldır?', 'Bu yazıyı beğenenler listesinden çıkacaksınız.')"
                                                           class="position-absolute top-0 end-0 m-2 text-danger" title="Vazgeç">
                                                            <i class="fas fa-times-circle"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                </div>
                            </div>

                            <div class="tab-pane fade" id="saved">
                                <div class="p-4">
                                    @if (Model.SavedPosts.Count == 0)
                                    {
                                        <div class="text-center py-5 text-muted">
                                            <i class="far fa-bookmark fa-3x mb-3 opacity-25"></i>
                                            <p>Listeniz boş.</p>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="list-group">
                                            @foreach (var p in Model.SavedPosts)
                                            {
                                                <div class="list-group-item d-flex align-items-center justify-content-between p-3 border rounded mb-2">
                                                    <div class="d-flex align-items-center">
                                                        <div class="bg-secondary rounded me-3 d-flex align-items-center justify-content-center text-white" style="width:50px; height:50px;">
                                                            <i class="fas fa-image"></i>
                                                        </div>
                                                        <div>
                                                            <h6 class="mb-0 fw-bold"><a href="/Post/Detail/@p.Id" class="text-dark">@p.Title</a></h6>
                                                            <small class="text-muted">Kategori: @(p.Category?.Title ?? "-")</small>
                                                        </div>
                                                    </div>
                                                    <a href="javascript:void(0);"
                                                       onclick="confirmAction('/UserProfile/RemoveSaved?postId=@p.Id', 'Listeden Çıkar?', 'Bu yazı kaydedilenler listenizden kaldırılacak.')"
                                                       class="btn btn-sm btn-outline-warning text-dark">
                                                        <i class="fas fa-bookmark me-1"></i> Çıkar
                                                    </a>
                                                </div>
                                            }
                                        </div>
                                    }
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    function confirmAction(url, title, text) {
        Swal.fire({
            title: title,
            text: text,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Evet, Yap!',
            cancelButtonText: 'Vazgeç'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = url;
            }
        });
    }

    $(document).ready(function () {
        $('#btnApplyAuthor').click(function () {
            Swal.fire({
                title: 'Yazar Olmak İstiyor musunuz?',
                text: "Yazar olduğunuzda kendi içeriklerinizi oluşturup paylaşabileceksiniz. Başvurunuz yöneticiye iletilecektir.",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet, Başvur!',
                cancelButtonText: 'Vazgeç'
            }).then((result) => {
                if (result.isConfirmed) {
                    var btn = $('#btnApplyAuthor');
                    var originalText = btn.html();
                    btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> İşleniyor...');

                    $.ajax({
                        url: '/UserProfile/ApplyForAuthorship',
                        type: 'POST',
                        success: function (response) {
                            if (response.success) {
                                Swal.fire({
                                    title: 'Başarılı!',
                                    text: response.message,
                                    icon: 'success',
                                    confirmButtonText: 'Tamam'
                                }).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire('Bilgi', response.message, 'info');
                                btn.prop('disabled', false).html(originalText);
                            }
                        },
                        error: function () {
                            Swal.fire('Hata', 'Bir sorun oluştu. Lütfen tekrar deneyin.', 'error');
                            btn.prop('disabled', false).html(originalText);
                        }
                    });
                }
            })
        });
    });
</script>