@using BlogProject.Entities
@model List<Post>

<div class="mt-5">
    <h4 class="fw-bold mb-4 text-dark border-bottom pb-2">
        <i class="fas fa-feather-alt me-2 text-primary"></i>Editörün Seçimi
    </h4>

    <div class="d-flex flex-column gap-3">
        @if (Model.Count == 0)
        {
            <div class="alert alert-light text-center small text-muted">
                Editör henüz seçim yapmadı.
            </div>
        }
        else
        {
            foreach (var post in Model)
            {
                <a href="/Post/Detail/@post.Id" class="text-decoration-none text-dark">
                    <div class="card border-0 shadow-sm hover-scale overflow-hidden">
                        <div class="row g-0 align-items-center">

                            <div class="col-4">
                                <img src="@post.ImageUrl" class="img-fluid h-100 w-100 rounded-start" alt="@post.Title"
                                     style="object-fit: cover; min-height: 90px; max-height: 100px;">
                            </div>

                            <div class="col-8">
                                <div class="card-body p-2">
                                    <h6 class="card-title fw-bold mb-1 text-truncate" style="font-size: 0.95rem;">
                                        @post.Title
                                    </h6>
                                    <p class="card-text text-secondary small mb-0 lh-sm">
                                        @if ((post.Content?.Length ?? 0) > 60)
                                        {
                                            @post.Content.Substring(0, 60)<span>...</span>
                                        }
                                        else
                                        {
                                            @post.Content
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            }
        }
    </div>
</div>

<style>
    .hover-scale {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        background-color: #fff;
    }

        .hover-scale:hover {
            transform: translateY(-3px);
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.1) !important;
            z-index: 10;
        }
</style>