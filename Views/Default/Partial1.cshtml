@using BlogProject.Entities
@model List<Post>

<div class="row g-4">
    @foreach (var post in Model)
    {
        <div class="col-md-6">
            <div class="card h-100 border-0 shadow-sm overflow-hidden blog-card">

                <div class="position-relative">
                    <img src="@post.ImageUrl" class="card-img-top" alt="@post.Title"
                         style="height: 250px; object-fit: cover; transition: transform 0.5s;">

                    <div class="position-absolute top-0 start-0 bg-primary text-white px-3 py-1 mt-3 rounded-end shadow-sm">
                        <small><i class="far fa-calendar-alt me-1"></i> @post.CreatedAt.ToString("dd.MM.yyyy")</small>
                    </div>
                </div>

                <div class="card-body">
                    <h5 class="card-title fw-bold mb-3">
                        <a href="/Post/Detail/@post.Id" class="text-dark text-decoration-none stretched-link">
                            @post.Title
                        </a>
                    </h5>

                    <p class="card-text text-secondary">
                        @if (!string.IsNullOrEmpty(post.Content) && post.Content.Length > 110)
                        {
                            @post.Content.Substring(0, 110)<span>...</span>
                        }
                        else
                        {
                            @post.Content
                        }
                    </p>
                </div>

                <div class="card-footer bg-white border-0 pb-4 pt-0">
                    <span class="text-primary fw-bold small text-uppercase">
                        Devamını Oku <i class="fas fa-arrow-right ms-1 animate-icon"></i>
                    </span>
                </div>
            </div>
        </div>
    }
</div>

<div class="mt-4">
    @Html.Action("Partial2", "Default")
</div>

<style>
    .blog-card:hover .card-img-top {
        transform: scale(1.05);
    }

    .blog-card:hover .animate-icon {
        transform: translateX(5px);
        transition: transform 0.3s ease;
    }
</style>