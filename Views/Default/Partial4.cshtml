@using BlogProject.Entities
@model List<Post>

<div class="mb-4">
    <h4 class="fw-bold mb-3 text-dark">
        <i class="fas fa-map-marked-alt me-2 text-danger"></i>En Beğendiğim Yerler
    </h4>

    <div class="row g-3">
        @foreach (var post in Model)
        {
            <div class="col-6 col-md-4">
                <div class="card h-100 border-0 shadow-sm overflow-hidden location-card">

                    <div class="position-relative">
                        <img src="@post.ImageUrl" class="card-img-top" alt="@post.Title"
                             style="height: 140px; object-fit: cover;">

                        <div class="card-img-overlay d-flex align-items-end p-0">
                            <div class="w-100 p-2 text-white"
                                 style="background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);">
                                <h6 class="card-title mb-0 fw-bold text-truncate" style="font-size: 0.9rem;">
                                    @post.Title
                                </h6>
                            </div>
                        </div>

                        <a href="/Post/Detail/@post.Id" class="stretched-link"></a>
                    </div>

                    <div class="card-body p-2 bg-light">
                        <p class="card-text text-muted small lh-sm mb-0">
                            @if (!string.IsNullOrEmpty(post.Content) && post.Content.Length > 50)
                            {
                                @post.Content.Substring(0, 50)<span>...</span>
                            }
                            else
                            {
                                @post.Content
                            }
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="mt-4">
        @Html.Action("Partial5", "Default")
    </div>
</div>

<style>
    .location-card {
        transition: transform 0.2s;
    }

        .location-card:hover {
            transform: translateY(-3px);
        }

            .location-card:hover img {
                filter: brightness(1.1);
                transition: filter 0.3s;
            }
</style>