@using BlogProject.Entities
@model List<Post>

<div class="mt-4">
    <h4 class="fw-bold mb-4 text-dark border-bottom pb-2">
        <i class="fas fa-heart me-2 text-danger"></i>En Beğenilen Bloglar
    </h4>

    <div class="list-group list-group-flush shadow-sm rounded-3 overflow-hidden">
        @if (Model.Count == 0)
        {
            <div class="p-3 text-center text-muted small bg-white">
                Henüz veri yok.
            </div>
        }
        else
        {
            foreach (var item in Model)
            {
                <a href="/Post/Detail/@item.Id" class="list-group-item list-group-item-action p-2 border-light hover-bg">
                    <div class="d-flex w-100 align-items-center">

                        <div class="flex-shrink-0 me-3">
                            <img src="@item.ImageUrl" alt="@item.Title" class="rounded shadow-sm"
                                 style="width: 100px; height: 70px; object-fit: cover;">
                        </div>

                        <div class="flex-grow-1 overflow-hidden">
                            <h6 class="mb-1 text-truncate fw-bold text-dark" style="font-size: 0.95rem;">@item.Title</h6>

                            <div class="d-flex align-items-center">
                                <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill me-2">
                                    <i class="fas fa-heart small me-1"></i>@item.Likes.Count
                                </span>

                                <small class="text-muted" style="font-size: 0.75rem;">
                                    İncele
                                </small>
                            </div>
                        </div>

                        <i class="fas fa-chevron-right text-muted small ms-2"></i>
                    </div>
                </a>
            }
        }
    </div>
</div>

<div class="mt-4">
    @Html.Action("Partial5", "Default")
</div>

<style>
    .hover-bg {
        transition: background-color 0.2s;
    }

        .hover-bg:hover {
            background-color: #f8f9fa;
        }
</style>