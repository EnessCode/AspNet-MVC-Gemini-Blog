@model BlogProject.ViewModels.PostDetailViewModel
@{
    ViewBag.Title = "Blog Yazıları";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="container my-5">

    <div class="row mb-5 align-items-center">
        <div class="col-md-8">
            <h2 class="fw-bold text-dark border-start border-5 border-primary ps-3">
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                {
                    <span>"@ViewBag.SearchTerm" için sonuçlar</span>
                }
                else
                {
                    <span>Tüm Blog Yazıları</span>
                }
            </h2>
            <p class="text-muted ms-4 mb-0">Keşfetmen için en güncel hikayeler burada.</p>
        </div>

        <div class="col-md-4 mt-3 mt-md-0 text-md-end">
            <div class="d-inline-block bg-light px-4 py-2 rounded-pill shadow-sm border">
                <span class="text-muted fw-bold small">
                    <i class="far fa-file-alt me-2 text-primary"></i>
                    @{
                        int current = ViewBag.CurrentPage ?? 1;
                        int total = ViewBag.TotalPages ?? 1;
                    }
                    Sayfa @current / @total
                </span>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-lg-8">

            @if (Model.Posts.Count == 0)
            {
                <div class="alert alert-warning text-center py-5 shadow-sm border-0 rounded-3">
                    <i class="fas fa-search fa-3x mb-3 text-warning"></i>
                    <h4>Sonuç Bulunamadı</h4>
                    <p>Aradığınız kriterlere uygun bir yazı bulamadık.</p>
                    <a href="/Post/Index" class="btn btn-outline-dark mt-2">Tüm Yazıları Göster</a>
                </div>
            }
            else
            {
                <div class="vstack gap-5">
                    @foreach (var x in Model.Posts)
                    {
                        <div class="card border-0 shadow-sm overflow-hidden blog-card-horizontal">
                            <div class="row g-0">
                                <div class="col-md-5 position-relative">
                                    <img src="@x.ImageUrl" class="img-fluid h-100 w-100" alt="@x.Title"
                                         style="object-fit: cover; min-height: 250px;">

                                    @if (x.Category != null)
                                    {
                                        <span class="position-absolute top-0 start-0 m-3 badge bg-white text-dark shadow-sm">
                                            @x.Category.Title
                                        </span>
                                    }
                                </div>

                                <div class="col-md-7">
                                    <div class="card-body p-4 h-100 d-flex flex-column">
                                        <div class="mb-2 text-muted small">
                                            <i class="far fa-calendar-alt me-1"></i> @x.CreatedAt.ToString("dd MMMM yyyy")
                                        </div>

                                        <h3 class="card-title fw-bold mb-3">
                                            <a href="/Post/Detail/@x.Id" class="text-dark text-decoration-none stretched-link title-hover">
                                                @x.Title
                                            </a>
                                        </h3>

                                        <p class="card-text text-secondary mb-4">
                                            @{
                                                var content = x.Content ?? "";
                                                var preview = content.Length > 150 ? content.Substring(0, 150) + "..." : content;
                                            }
                                            @preview
                                        </p>

                                        <div class="mt-auto">
                                            <span class="text-primary fw-bold small text-uppercase read-more">
                                                Okumaya Devam Et <i class="fas fa-arrow-right ms-1"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                if (ViewBag.TotalPages != null && ViewBag.TotalPages > 1)
                {
                    <nav class="mt-5">
                        <ul class="pagination justify-content-center">
                            @{
                                int currentPage = ViewBag.CurrentPage;
                                int totalPages = ViewBag.TotalPages;
                                string queryParams = "";
                                if (ViewBag.CategoryId != null) { queryParams += "&id=" + ViewBag.CategoryId; }
                                if (!string.IsNullOrEmpty(ViewBag.SearchTerm)) { queryParams += "&search=" + ViewBag.SearchTerm; }
                            }

                            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                <a class="page-link" href="/Post/Index?page=@(currentPage - 1)@queryParams">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>

                            @for (int i = 1; i <= totalPages; i++)
                            {
                                <li class="page-item @(i == currentPage ? "active" : "")">
                                    <a class="page-link" href="/Post/Index?page=@i@queryParams">@i</a>
                                </li>
                            }

                            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                <a class="page-link" href="/Post/Index?page=@(currentPage + 1)@queryParams">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            }
        </div>

        <div class="col-lg-4 mt-5 mt-lg-0">
            <div class="sticky-top" style="top: 100px;">

                <div class="card border-0 shadow-sm rounded-3 mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0 fw-bold">Son Eklenenler</h5>
                    </div>
                    <div class="list-group list-group-flush">
                        @foreach (var y in Model.RecentPosts)
                        {
                            <a href="/Post/Detail/@y.Id" class="list-group-item list-group-item-action d-flex align-items-center py-3 border-0 border-bottom">
                                <img src="@y.ImageUrl" class="rounded shadow-sm me-3" width="60" height="60" style="object-fit: cover;">
                                <div>
                                    <h6 class="mb-1 fw-bold text-dark text-truncate" style="max-width: 200px;">@y.Title</h6>
                                    <small class="text-muted">@y.CreatedAt.ToString("dd.MM.yyyy")</small>
                                </div>
                            </a>
                        }
                    </div>
                </div>

                <div class="p-4 bg-light text-dark rounded-3 shadow-sm border">
                    <h5 class="fw-bold"><i class="fas fa-info-circle me-2 text-primary"></i>Blog Hakkında</h5>
                    <p class="small text-muted mb-0 mt-2">
                        Bu platformda seyahat, yemek kültürü ve etkinlikler üzerine en güncel içerikleri bulabilirsiniz.
                        Keyifli okumalar!
                    </p>
                </div>

            </div>
        </div>

    </div>
</div>

<style>
    .blog-card-horizontal {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .blog-card-horizontal:hover {
            transform: translateY(-5px);
            box-shadow: 0 1rem 3rem rgba(0,0,0,.15) !important;
        }

            .blog-card-horizontal:hover .title-hover {
                color: #0d6efd !important;
            }

            .blog-card-horizontal:hover .read-more i {
                padding-left: 5px;
                transition: padding 0.3s;
            }
</style>