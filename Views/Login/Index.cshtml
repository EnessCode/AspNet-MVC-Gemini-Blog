@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Yap | Blog Portalı</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        body {
            font-family: 'Inter', sans-serif;
            height: 100vh;
            overflow: hidden;
            background-color: #fff;
        }

        .bg-image {
            background-image: url('https://images.unsplash.com/photo-1499750310159-52f0f83463fb?q=80&w=2070&auto=format&fit=crop');
            background-size: cover;
            background-position: center;
            height: 100vh;
            position: relative;
        }

        .bg-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 3rem;
            color: white;
        }

        .login-section {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            background-color: #fff;
        }

        .form-wrapper {
            width: 100%;
            max-width: 420px;
            padding: 30px;
        }

        .form-floating > .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
        }

        .btn-login {
            padding: 12px;
            font-weight: 600;
            letter-spacing: 0.5px;
            transition: all 0.3s;
        }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(13, 110, 253, 0.3);
        }

        .forgot-password-link:hover {
            color: #0d6efd !important;
            text-decoration: underline !important;
        }

        .modern-alert {
            display: flex;
            align-items: center;
            background: #fff5f5; 
            border-left: 4px solid #ff4d4d; 
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 25px;
            box-shadow: 0 4px 15px rgba(255, 77, 77, 0.1);
        }

        .alert-icon {
            font-size: 20px;
            color: #ff4d4d;
            margin-right: 15px;
            background: rgba(255, 77, 77, 0.1);
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            flex-shrink: 0;
        }

        .alert-content h6 {
            color: #e02e2e;
            font-size: 0.95rem;
        }

        .alert-content small {
            color: #636e72;
            font-size: 0.85rem;
            display: block;
            line-height: 1.4;
        }

        .error-shake {
            animation: shake 0.5s cubic-bezier(.36,.07,.19,.97) both;
        }

        @@keyframes shake {
            10%, 90% { transform: translate3d(-1px, 0, 0); }
            20%, 80% { transform: translate3d(2px, 0, 0); }
            30%, 50%, 70% { transform: translate3d(-4px, 0, 0); }
            40%, 60% { transform: translate3d(4px, 0, 0); }
        }

    </style>
</head>
<body>

    <div class="container-fluid g-0">
        <div class="row g-0">

            <div class="col-lg-6 d-none d-lg-block">
                <div class="bg-image">
                    <div class="bg-overlay">
                        <h1 class="display-4 fw-bold mb-3">Hikayeni Paylaş.</h1>
                        <p class="lead">Düşüncelerini, deneyimlerini ve tutkularını dünyayla paylaşmak için en doğru yerdesiniz.</p>
                        <div class="mt-4">
                            <small class="opacity-75"><i class="fas fa-quote-left me-2"></i>Sözcükler dünyayı değiştirebilir.</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 login-section">
                <div class="form-wrapper">

                    <div class="text-center mb-5">
                        <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3 shadow" style="width: 60px; height: 60px;">
                            <i class="fas fa-feather-alt fa-2x"></i>
                        </div>
                        <h2 class="fw-bold text-dark">Hoş Geldiniz</h2>
                        <p class="text-muted">Devam etmek için hesabınıza giriş yapın.</p>
                    </div>

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success d-flex align-items-center mb-4 rounded-3 shadow-sm border-0" role="alert" style="background-color: #d1e7dd; color: #0f5132;">
                            <i class="fas fa-check-circle me-3 fs-4"></i>
                            <div>@TempData["Success"]</div>
                        </div>
                    }

                    @if (ViewBag.Error != null)
                    {
                        <div class="modern-alert error-shake">
                            <div class="alert-icon">
                                <i class="fas fa-exclamation-triangle"></i>
                            </div>
                            <div class="alert-content">
                                <h6 class="fw-bold mb-0">Giriş Başarısız</h6>
                                <small>@ViewBag.Error</small>
                            </div>
                        </div>
                    }

                    @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="username" name="username" placeholder="Kullanıcı Adı" required>
                            <label for="username"><i class="fas fa-user me-2 text-secondary"></i>Kullanıcı Adı</label>
                        </div>

                        <div class="form-floating mb-2 position-relative">
                            <input type="password" class="form-control" id="password" name="password" placeholder="Şifre" required>
                            <label for="password"><i class="fas fa-lock me-2 text-secondary"></i>Şifre</label>

                            <button type="button" class="btn btn-link position-absolute top-50 end-0 translate-middle-y text-decoration-none text-secondary me-2" onclick="togglePassword()" style="z-index: 5;">
                                <i class="far fa-eye" id="toggleIcon"></i>
                            </button>
                        </div>

                        <div class="d-flex justify-content-end mb-4">
                            <a href="/Login/ForgotPassword" class="text-secondary text-decoration-none small forgot-password-link">
                                Şifremi Unuttum?
                            </a>
                        </div>

                        <div class="d-grid gap-2 mb-4">
                            <button type="submit" class="btn btn-primary btn-login shadow-sm">
                                Giriş Yap <i class="fas fa-arrow-right ms-2"></i>
                            </button>
                        </div>

                        <div class="text-center">
                            <p class="text-muted mb-0">Hesabınız yok mu? <a href="/Login/Register" class="text-primary text-decoration-none fw-bold">Hemen Kayıt Ol</a></p>
                        </div>
                    }

                </div>
            </div>

        </div>
    </div>

    <script>
        function togglePassword() {
            var passwordInput = document.getElementById("password");
            var icon = document.getElementById("toggleIcon");
            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            } else {
                passwordInput.type = "password";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            }
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>