@using BlogProject.Entities
@model List<Post>

@{
    ViewBag.Title = "Bloglarım";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}

<div class="container-fluid mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-secondary mb-0"><i class="fas fa-file-invoice me-2"></i>Blog Yazılarım</h2>
            <small class="text-muted">Yayınladığınız ve taslak halindeki tüm yazılarınızı buradan yönetin.</small>
        </div>

        <a href="/Author/PostCreate" class="btn btn-primary btn-lg shadow-sm rounded-pill px-4">
            <i class="fas fa-plus me-1"></i> Yeni Yazı Oluştur
        </a>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary">
                        <tr style="font-size: 0.9rem;">
                            <th class="ps-4 py-3" style="width: 5%;">ID</th>
                            <th style="width: 65%;">BAŞLIK</th>
                            <th class="text-center" style="width: 30%;">YÖNETİM</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <span class="badge bg-secondary bg-opacity-75 text-white">#@x.Id</span>
                                </td>

                                <td>
                                    <span class="fw-bold text-dark">@x.Title</span>
                                </td>

                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a href="/Post/Detail/@x.Id" target="_blank" class="btn btn-outline-info btn-sm" data-bs-toggle="tooltip" title="Sitede Gör">
                                            <i class="fas fa-eye"></i>
                                        </a>

                                        <a href="/Author/PostEdit/@x.Id" class="btn btn-outline-warning btn-sm text-dark" title="Düzenle">
                                            <i class="fas fa-pen"></i>
                                        </a>

                                        <a href="/Author/PostDelete/@x.Id" class="btn btn-outline-danger btn-sm"
                                           onclick="return confirm('Bu yazıyı silmek istediğinize emin misiniz? Geri alınamaz.');"
                                           title="Sil">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }

                        @if (Model.Count == 0)
                        {
                            <tr>
                                <td colspan="3" class="text-center py-5">
                                    <i class="fas fa-feather-alt fa-3x text-muted mb-3 opacity-50"></i>
                                    <h5 class="text-muted">Henüz hiç yazı paylaşmadınız.</h5>
                                    <p class="text-secondary small">İlk blog yazınızı oluşturmak için sağ üstteki butonu kullanın.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>