@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog Project | Modern Seyahat ve Yaşam</title>

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&family=Merriweather:ital,wght@0,300;0,700;1,400&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f9f9f9;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .top-bar {
            background-color: #212529;
            color: #ccc;
            font-size: 0.85rem;
            padding: 8px 0;
        }

            .top-bar a {
                color: #ccc;
                text-decoration: none;
                transition: 0.3s;
            }

                .top-bar a:hover {
                    color: #fff;
                }

        .navbar-main {
            background-color: #fff;
            box-shadow: 0 2px 15px rgba(0,0,0,0.05);
            padding: 15px 0;
        }

        .navbar-brand img {
            height: 40px;
        }

        .nav-link {
            color: #444 !important;
            font-weight: 500;
            margin-right: 15px;
            position: relative;
        }

            .nav-link:hover, .nav-link.active {
                color: #0d6efd !important;
            }

        .dropdown-menu {
            border: none;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            border-radius: 8px;
        }

        .dropdown-item {
            padding: 10px 20px;
            font-size: 0.9rem;
        }

            .dropdown-item:hover {
                background-color: #f8f9fa;
                color: #0d6efd;
            }

        .search-form input {
            border-radius: 20px 0 0 20px;
            border: 1px solid #ddd;
            border-right: none;
            font-size: 0.9rem;
        }

            .search-form input:focus {
                box-shadow: none;
                border-color: #0d6efd;
            }

        .search-form button {
            border-radius: 0 20px 20px 0;
            border: 1px solid #ddd;
            border-left: none;
            background: #fff;
            color: #666;
        }

            .search-form button:hover {
                background: #f8f9fa;
                color: #0d6efd;
            }

        .main-content {
            flex: 1;
            padding: 40px 0;
        }

        footer {
            background-color: #212529;
            color: rgba(255,255,255,0.7);
            padding: 40px 0 20px;
            font-size: 0.9rem;
        }

            footer h5 {
                color: #fff;
                font-weight: 600;
                margin-bottom: 20px;
            }

            footer a {
                color: rgba(255,255,255,0.7);
                text-decoration: none;
            }

                footer a:hover {
                    color: #fff;
                }
    </style>
</head>
<body>

    <div class="top-bar">
        <div class="container d-flex justify-content-between align-items-center">

            <div>
                <a href="https://github.com/EnessCode" target="_blank">
                    <i class="fab fa-github me-2"></i> github.com/EnessCode
                </a>
            </div>

            <div>
                @if (Session["UserId"] != null)
                {
                    <span class="me-3">Merhaba, <strong>@Session["Username"]</strong></span>
                    <a href="/Login/LogOut" class="btn btn-sm btn-danger py-0 px-2 rounded-pill" style="font-size: 0.8rem;">Çıkış</a>
                }
                else
                {
                    <a href="/Login/Index" class="me-3"><i class="fas fa-sign-in-alt me-1"></i> Giriş Yap</a>
                    <a href="/Login/Register"><i class="fas fa-user-plus me-1"></i> Kayıt Ol</a>
                }
            </div>
        </div>
    </div>

    <nav class="navbar navbar-expand-lg navbar-light navbar-main sticky-top">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="/Default/Index">
                <i class="fas fa-paper-plane fa-lg me-2 text-dark"></i>
                <span class="fw-bold text-dark" style="letter-spacing: 1px; font-size: 1.1rem;">PROJECT</span>
                <span class="mx-2 text-secondary fw-light">|</span>
                <span class="text-primary fw-bold" style="letter-spacing: 1px;">BLOG</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item"><a class="nav-link" href="/Default/Index">Ana Sayfa</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Post/Index">Blog Yazıları</a></li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            Kategoriler
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/Post/Index?id=1"><i class="fas fa-plane me-2 text-primary"></i>Seyahat</a></li>
                            <li><a class="dropdown-item" href="/Post/Index?id=2"><i class="fas fa-utensils me-2 text-success"></i>Yemek</a></li>
                            <li><a class="dropdown-item" href="/Post/Index?id=3"><i class="fas fa-calendar-alt me-2 text-warning"></i>Etkinlikler</a></li>
                        </ul>
                    </li>

                    <li class="nav-item"><a class="nav-link" href="/Default/About">Hakkımızda</a></li>

                    @if (Session["UserId"] != null)
                    {
                        <li class="nav-item"><a class="nav-link" href="/Post/Saved"><i class="fas fa-bookmark"></i></a></li>
                        <li class="nav-item"><a class="nav-link btn btn-outline-primary px-3 rounded-pill ms-2 text-primary" href="/UserProfile/Index">Profilim</a></li>
                    }

                    <li class="nav-item ms-3">
                        <form action="/Post/Index" method="get" class="search-form d-flex">
                            <input class="form-control" type="search" name="search" placeholder="Blog ara..." aria-label="Search">
                            <button class="btn" type="submit"><i class="fas fa-search"></i></button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="main-content">
        @RenderBody()
    </main>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5>Blog Project</h5>
                    <p>Dünyayı keşfetmek, yeni lezzetler tatmak ve deneyimlerimizi paylaşmak için buradayız. Bize katılın ve hikayenizi yazın.</p>
                </div>
                <div class="col-md-4 mb-4">
                    <h5>Hızlı Linkler</h5>
                    <ul class="list-unstyled">
                        <li><a href="/Default/Index">Ana Sayfa</a></li>
                        <li><a href="/Post/Index">Bloglar</a></li>
                        <li><a href="/Login/Register">Kayıt Ol</a></li>
                        <li><a href="/Login/Index">Giriş Yap</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-4">
                    <h5>İletişim</h5>
                    <p><i class="fas fa-map-marker-alt me-2"></i> İstanbul, Türkiye</p>
                    <p><i class="fas fa-envelope me-2"></i> info@blogproject.com</p>
                    <div class="mt-3">
                        <a href="#" class="me-3"><i class="fab fa-twitter fa-lg"></i></a>
                        <a href="#" class="me-3"><i class="fab fa-instagram fa-lg"></i></a>
                        <a href="#" class="me-3"><i class="fab fa-linkedin fa-lg"></i></a>
                    </div>
                </div>
            </div>
            <hr class="border-secondary my-4">
            <div class="text-center">
                <small>&copy; @DateTime.Now.Year EasyTrip Blog Project. Tüm Hakları Saklıdır.</small>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>