@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Yazar Paneli</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f4f6f9;
            overflow-x: hidden;
        }

        #sidebar-wrapper {
            min-height: 100vh;
            margin-left: -15rem;
            transition: margin 0.25s ease-out;
            background-color: #2c3e50; /* Yazar paneli için farklı renk, güzel seçim */
            color: #fff;
        }

        #sidebar-wrapper .sidebar-heading {
            padding: 1.5rem 1.25rem;
            font-size: 1.2rem;
            font-weight: bold;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        #sidebar-wrapper .list-group {
            width: 15rem;
        }

        #page-content-wrapper {
            min-width: 100vw;
        }

        .list-group-item {
            border: none;
            padding: 1rem 1.25rem;
            font-size: 1rem;
            background-color: transparent;
            color: rgba(255, 255, 255, 0.7);
            transition: all 0.3s;
        }

        .list-group-item:hover {
            background-color: rgba(255, 255, 255, 0.1);
            color: #fff;
            padding-left: 1.5rem;
        }

        .list-group-item.active {
            background-color: #1abc9c;
            color: #fff;
            font-weight: 600;
        }

        body.sb-sidenav-toggled #wrapper #sidebar-wrapper {
            margin-left: 0;
        }

        @@media (min-width: 768px) {
            #sidebar-wrapper {
                margin-left: 0;
            }

            #page-content-wrapper {
                min-width: 0;
                width: 100%;
            }

            body.sb-sidenav-toggled #wrapper #sidebar-wrapper {
                margin-left: -15rem;
            }
        }

        .navbar-custom {
            background-color: #fff;
            box-shadow: 0 2px 4px rgba(0,0,0,.04);
        }
    </style>
</head>
<body>

    <div class="d-flex" id="wrapper">
        <div class="border-end" id="sidebar-wrapper">
            <div class="sidebar-heading text-center">
                <i class="fas fa-pen-nib me-2"></i>Yazar Paneli
            </div>
            <div class="list-group list-group-flush mt-3">

                <a href="/Author/Index" class="list-group-item list-group-item-action">
                    <i class="fas fa-file-alt me-3" style="width:20px"></i>Bloglarım
                </a>

                <a href="/Author/NotificationList" class="list-group-item list-group-item-action">
                    <i class="fas fa-bell me-3" style="width:20px"></i>Bildirimler
                </a>

                <div class="border-top border-secondary my-3 mx-3"></div>

                <a href="/Default/Index" target="_blank" class="list-group-item list-group-item-action text-info">
                    <i class="fas fa-globe me-3" style="width:20px"></i>Siteye Git
                </a>

                <a href="/Login/LogOut" class="list-group-item list-group-item-action text-warning">
                    <i class="fas fa-sign-out-alt me-3" style="width:20px"></i>Çıkış Yap
                </a>
            </div>
        </div>

        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light navbar-custom py-3 px-4">
                <div class="container-fluid">
                    <button class="btn btn-outline-secondary" id="sidebarToggle">
                        <i class="fas fa-bars"></i>
                    </button>

                    <span class="ms-auto text-secondary fw-bold d-flex align-items-center">
                        Hoşgeldiniz, Yazar
                        <img src="https://ui-avatars.com/api/?name=Yazar&background=1abc9c&color=fff" class="rounded-circle ms-2 shadow-sm" width="35" />
                    </span>
                </div>
            </nav>

            <div class="container-fluid px-4 py-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        window.addEventListener('DOMContentLoaded', event => {
            const sidebarToggle = document.body.querySelector('#sidebarToggle');
            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', event => {
                    event.preventDefault();
                    document.body.classList.toggle('sb-sidenav-toggled');
                });
            }
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>