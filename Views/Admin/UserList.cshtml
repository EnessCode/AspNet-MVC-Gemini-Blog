@model List<BlogProject.Entities.User>
@{
    ViewBag.Title = "Kullanıcı Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Kullanıcı & Yazar Listesi</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                    <thead class="table-light">
                        <tr>
                            <th>Kullanıcı</th>
                            <th>Rol</th>
                            <th>Durum</th>
                            <th>Rol İşlemi</th>
                            <th>Hesap İşlemi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            string rowClass = user.IsActive ? "" : "table-danger";

                            <tr class="@rowClass">
                                <td class="align-middle">
                                    <img src="https://ui-avatars.com/api/?name=@user.Username&background=random" class="rounded-circle me-2" width="30">
                                    @user.Username
                                    <br>
                                    <small class="text-muted">@user.Email</small>
                                </td>

                                <td class="align-middle">
                                    @if (user.Role != null && user.Role.Name == "Author")
                                    {
                                        <span class="badge bg-info text-dark"><i class="fas fa-pen-nib"></i> Yazar</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary"><i class="fas fa-user"></i> Üye</span>
                                    }
                                </td>

                                <td class="align-middle">
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Engelli</span>
                                    }
                                </td>

                                <td class="align-middle text-center">
                                    @if (user.Role != null && user.Role.Name == "Author")
                                    {
                                        <a href="/Admin/ToggleAuthor/@user.Id" class="btn btn-sm btn-outline-secondary w-100">
                                            Üye Yap
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="/Admin/ToggleAuthor/@user.Id" class="btn btn-sm btn-outline-info w-100">
                                            Yazar Yap
                                        </a>
                                    }
                                </td>

                                <td class="align-middle text-center">
                                    @if (user.IsActive)
                                    {
                                        <a href="/Admin/ToggleStatus/@user.Id" class="btn btn-sm btn-danger w-100" onclick="return confirm('Bu kullanıcıyı engellemek istediğinize emin misiniz? Giriş yapamayacak.')">
                                            <i class="fas fa-ban"></i> Engelle
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="/Admin/ToggleStatus/@user.Id" class="btn btn-sm btn-success w-100">
                                            <i class="fas fa-check"></i> Engel Kaldır
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>