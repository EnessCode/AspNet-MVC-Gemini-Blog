@model BlogProject.Entities.About
@{
    ViewBag.Title = "Hakkımızda Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-white py-3">
        <h4 class="mb-0 text-primary fw-bold"><i class="fas fa-edit me-2"></i>Hakkımızda Sayfasını Düzenle</h4>
    </div>
    <div class="card-body p-4">

        @using (Html.BeginForm("AboutUpdate", "Admin", FormMethod.Post))
        {
            @Html.HiddenFor(x => x.Id)

            <div class="mb-4">
                <label class="form-label fw-bold">Başlık</label>
                @Html.TextBoxFor(x => x.Title, new { @class = "form-control form-control-lg", @placeholder = "Sayfa Başlığı..." })
            </div>

            <div class="mb-4">
                <label class="form-label fw-bold">Görsel URL</label>
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="fas fa-image"></i></span>
                    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control", @placeholder = "https://..." })
                </div>
                <small class="text-muted">Görselin internet üzerindeki linkini yapıştırınız.</small>
            </div>

            <div class="mb-4">
                <label class="form-label fw-bold">İçerik</label>
                @Html.TextAreaFor(x => x.Content, new { @class = "form-control", @id = "summernote", @rows = 10 })
            </div>

            <div class="d-grid gap-2">
                <button class="btn btn-primary btn-lg text-uppercase fw-bold" type="submit">
                    <i class="fas fa-save me-2"></i>Değişiklikleri Kaydet
                </button>
            </div>
        }
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

<script>
    $('#summernote').summernote({
        placeholder: 'Hakkımızda yazısını buraya giriniz...',
        tabsize: 2,
        height: 300,
        toolbar: [
            ['style', ['style']],
            ['font', ['bold', 'underline', 'clear']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['table', ['table']],
            ['insert', ['link', 'picture']],
            ['view', ['fullscreen', 'codeview', 'help']]
        ]
    });
</script>
