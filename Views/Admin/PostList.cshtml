@using BlogProject.Entities
@model List<Post>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary mb-0"><i class="fas fa-blog me-2"></i>Blog Listesi</h2>
            <small class="text-muted">Tüm blog yazılarınızı buradan yönetebilirsiniz.</small>
        </div>
        <a href="/Admin/PostCreate" class="btn btn-primary btn-lg shadow-sm">
            <i class="fas fa-plus"></i> Yeni Blog Oluştur
        </a>
    </div>

    <div class="card shadow border-0 mb-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-nowrap align-middle mb-0">
                    <thead class="bg-light text-secondary">
                        <tr>
                            <th class="ps-4" style="width: 5%;">ID</th>
                            <th style="width: 55%;">BAŞLIK</th>
                            <th class="text-center" style="width: 40%;">İŞLEMLER</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <span class="badge bg-secondary text-white">#@x.Id</span>
                                </td>

                                <td>
                                    <span class="fw-bold text-dark">@x.Title</span>
                                </td>

                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a href="/Post/Detail/@x.Id" class="btn btn-outline-info btn-sm" title="Sitede Gör">
                                            <i class="fas fa-eye"></i> <span class="d-none d-md-inline">Detay</span>
                                        </a>

                                        <a href="/Admin/PostEdit/@x.Id" class="btn btn-outline-warning btn-sm" title="Düzenle">
                                            <i class="fas fa-pen"></i> <span class="d-none d-md-inline">Güncelle</span>
                                        </a>

                                        <a href="/Admin/PostDelete/@x.Id" class="btn btn-outline-danger btn-sm" title="Sil" onclick="return confirm('Bu blog yazısını silmek istediğinize emin misiniz?');">
                                            <i class="fas fa-trash"></i> <span class="d-none d-md-inline">Sil</span>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
        .table th {
                font-size: 0.85rem;
                font-weight: 600;
                letter-spacing: 0.5px;
                text-transform: uppercase;
                border-top: none;

    }

        .table td {
                vertical-align: middle;
                font-size: 0.95rem;

    }

        .btn-group .btn {
                margin: 0 2px;
                border-radius: 0.25rem !important;

    }

        .shadow-sm {
                box-shadow: 0 .125rem .25rem rgba(0,0,0,.075) !important;

    }

        .shadow {
                box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;

    }

        .border-0 {
                border: 0 !important;

    }
</style>