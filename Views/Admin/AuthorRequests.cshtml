@model List<BlogProject.Entities.AuthorRequest>
@{
    ViewBag.Title = "Yazar Başvuruları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Bekleyen Yazar Başvuruları</h6>
        <span class="badge bg-warning text-dark">Bekleyen: @Model.Count</span>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                <thead class="table-light">
                    <tr>
                        <th>Kullanıcı</th>
                        <th>Email</th>
                        <th>Tarih</th>
                        <th class="text-center" style="width: 150px;">İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.Id">
                            <td class="align-middle fw-bold">
                                <img src="https://ui-avatars.com/api/?name=@item.User.Username&size=32&background=random" class="rounded-circle me-2" />
                                @item.User.Username
                            </td>
                            <td class="align-middle">@item.User.Email</td>
                            <td class="align-middle">@item.CreatedAt.ToString("dd.MM.yyyy")</td>
                            <td class="align-middle text-center">
                                <button onclick="openReviewModal(@item.Id)" class="btn btn-primary btn-sm shadow-sm w-100">
                                    <i class="fas fa-search me-1"></i> İncele
                                </button>
                            </td>
                        </tr>
                    }
                    @if (Model.Count == 0)
                    {
                        <tr><td colspan="4" class="text-center text-muted py-4">Bekleyen başvuru yok.</td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="reviewModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title"><i class="fas fa-user-edit me-2"></i>Aday İnceleme</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">

                <div class="text-center mb-4">
                    <img id="modalAvatar" src="" class="rounded-circle shadow mb-2" width="80" />
                    <h4 id="modalUsername" class="fw-bold text-dark mb-0"></h4>
                    <small id="modalEmail" class="text-muted"></small>
                </div>

                <div class="row text-center mb-4 g-2">
                    <div class="col-6">
                        <div class="p-2 bg-light rounded border">
                            <h5 id="modalCommentCount" class="fw-bold text-primary mb-0">0</h5>
                            <small class="text-muted" style="font-size:11px">TOPLAM YORUM</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-2 bg-light rounded border">
                            <h5 id="modalLikeCount" class="fw-bold text-danger mb-0">0</h5>
                            <small class="text-muted" style="font-size:11px">BEĞENİLEN YAZI</small>
                        </div>
                    </div>
                </div>

                <h6 class="fw-bold text-secondary mb-3 border-bottom pb-2">Son Aktiviteler (Yorumlar)</h6>
                <div id="modalCommentsList" class="mb-4" style="max-height: 150px; overflow-y: auto;">
                    <p class="text-muted small text-center">Yükleniyor...</p>
                </div>

            </div>
            <div class="modal-footer bg-light justify-content-between">
                <input type="hidden" id="modalRequestId" />

                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Kapat</button>

                <div>
                    <button onclick="rejectFromModal()" class="btn btn-danger me-2">
                        <i class="fas fa-times"></i> Reddet
                    </button>
                    <button onclick="approveFromModal()" class="btn btn-success">
                        <i class="fas fa-check"></i> Yazarlığı Onayla
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    var myModal; 

    $(document).ready(function () {
        myModal = new bootstrap.Modal(document.getElementById('reviewModal'));
    });

    function openReviewModal(requestId) {
        $('#modalCommentsList').html('<div class="text-center py-3"><div class="spinner-border text-primary" role="status"></div></div>');

        $.ajax({
            url: '/Admin/GetCandidateDetails',
            type: 'GET',
            data: { requestId: requestId },
            success: function (res) {
                if (res.success) {
                    $('#modalUsername').text(res.username);
                    $('#modalEmail').text(res.email);
                    $('#modalCommentCount').text(res.commentCount);
                    $('#modalLikeCount').text(res.likeCount);
                    $('#modalRequestId').val(res.requestId);

                    $('#modalAvatar').attr('src', 'https://ui-avatars.com/api/?name=' + res.username + '&size=128&background=0D6EFD&color=fff');

                    var commentsHtml = "";
                    if (res.lastComments.length > 0) {
                        $.each(res.lastComments, function (i, item) {
                            commentsHtml += `
                                <div class="card mb-2 border-0 bg-light">
                                    <div class="card-body p-2">
                                        <small class="fw-bold text-primary">${item.PostTitle}</small><br/>
                                        <span class="small text-dark fst-italic">"${item.Text}"</span>
                                    </div>
                                </div>
                            `;
                        });
                    } else {
                        commentsHtml = '<p class="text-muted small text-center mt-3">Bu kullanıcının hiç yorumu yok.</p>';
                    }
                    $('#modalCommentsList').html(commentsHtml);

                    myModal.show();
                } else {
                    Swal.fire('Hata', 'Kullanıcı bilgileri alınamadı.', 'error');
                }
            }
        });
    }

    function approveFromModal() {
        var id = $('#modalRequestId').val();

        myModal.hide();

        Swal.fire({
            title: 'Onaylıyor musun?',
            text: "Kullanıcıya yazar yetkisi verilecek.",
            icon: 'question',
            showCancelButton: true,
            confirmButtonText: 'Evet, Onayla'
        }).then((result) => {
            if (result.isConfirmed) {
                $.post("/Admin/ApproveAuthor", { id: id }, function (res) {
                    if (res.success) {
                        Swal.fire('Başarılı!', res.message, 'success');
                        $("#row_" + id).fadeOut();
                    }
                });
            } else {
                myModal.show();
            }
        });
    }
    function rejectFromModal() {
        var id = $('#modalRequestId').val();

        myModal.hide();

        Swal.fire({
            title: 'Reddet?',
            text: "Başvuru reddedilecek.",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Evet, Reddet',
            confirmButtonColor: '#d33'
        }).then((result) => {
            if (result.isConfirmed) {
                $.post("/Admin/RejectAuthor", { id: id }, function (res) {
                    if (res.success) {
                        Swal.fire('Reddedildi', res.message, 'success');
                        $("#row_" + id).fadeOut();
                    }
                });
            } else {
                myModal.show();
            }
        });
    }
</script>